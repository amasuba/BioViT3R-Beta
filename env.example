# IBM Watsonx Configuration
# Get your API key from https://cloud.ibm.com/iam/apikeys
IBM_WATSON_APIKEY=your_api_key_here

# IBM Project ID from your Watsonx project
IBM_PROJECT_ID=your_project_id_here

# IBM Watson URL (region-specific)
IBM_WATSON_URL=https://us-south.ml.cloud.ibm.com

# Alternative regions:
# Europe: https://eu-de.ml.cloud.ibm.com
# Asia Pacific: https://jp-tok.ml.cloud.ibm.com

# Weights & Biases (Optional - for experiment tracking)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=biovitr-beta
WANDB_ENTITY=your_wandb_username

# Database Configuration (Optional)
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_USER=biovitr
POSTGRES_DB=biovitr
DATABASE_URL=postgresql://biovitr:your_secure_password_here@localhost:5432/biovitr

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Monitoring Configuration (Optional)
GRAFANA_PASSWORD=your_grafana_password_here

# Application Configuration
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Model Configuration
MODEL_CACHE_DIR=models/
VGGT_MODEL_PATH=models/vggt/
FRUIT_DETECTION_MODEL_PATH=models/fruit_detection/
HEALTH_CLASSIFICATION_MODEL_PATH=models/health_classification/

# Processing Configuration
CUDA_VISIBLE_DEVICES=0
BATCH_SIZE=32
MAX_IMAGE_SIZE=1024
ENABLE_GPU=true

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=300

# Storage Configuration
UPLOAD_FOLDER=uploads/
OUTPUT_FOLDER=outputs/
MAX_UPLOAD_SIZE=50MB

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=biovitr@yourdomain.com

# Third-party API Keys (Optional)
# Add any additional API keys for external services
EXTERNAL_API_KEY=your_external_api_key_here

# Deployment Configuration
DOMAIN=localhost
PORT=7860
WORKERS=4
TIMEOUT=300

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30